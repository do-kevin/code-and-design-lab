---
import Layout from "../../layouts/Layout.astro";
---

<style>
  body {
    margin: 0;
  }
</style>
<Layout title="Lazyloading Banner">
  <style>
    .lazy-side-by-side,
    .lazy-side-by-side * {
      box-sizing: border-box;
      font-family:
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        "Segoe UI",
        Roboto,
        Oxygen,
        Ubuntu,
        Cantarell,
        "Open Sans",
        "Helvetica Neue",
        sans-serif;
      text-align: center;
      color: #000;
    }
    .lazy-side-by-side img {
      width: 100%;
    }
    .lazy-side-by-side .d-flex {
      display: flex;
    }
    .lazy-side-by-side .position-relative {
      position: relative;
    }
    .lazy-side-by-side .hidden {
      display: none;
    }
    .lazy-side-by-side .container {
      flex-direction: column;
      position: relative;
    }
    .lazy-side-by-side .left-side,
    .lazy-side-by-side .right-side {
      width: 100%;
    }
    .lazy-side-by-side .content {
      position: absolute;
      top: 0;
      width: 100%;
      padding: 1rem 15px;
      height: 100%;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }
    .lazy-side-by-side .headline {
      font-size: 30px;
      font-size: clamp(30px, 4vw, 48px);
      line-height: 1;
      font-weight: 600;
      margin-bottom: 1rem;
    }
    .lazy-side-by-side .copy {
      margin-bottom: 1rem;
      font-weight: 600;
      font-size: 14px;
      font-size: clamp(14px, 2vw, 1rem);
    }
    .lazy-side-by-side .call-to-action {
      color: #fff;
      padding: 0.5rem 1.25rem;
      background: #000;
      text-decoration: none;
      font-size: 14px;
      font-weight: 600;
      border: 1px solid #000;
      transition: all 270ms;
    }
    .lazy-side-by-side .call-to-action:-webkit-any-link {
      color: #fff;
      background: #000;
      text-decoration: none;
      border: 1px solid #000;
    }
    .lazy-side-by-side .call-to-action:active,
    .lazy-side-by-side .call-to-action:hover {
      background: transparent;
      border: 1px solid #000;
      color: #000;
    }
    .lazy-side-by-side .call-to-action:active:-webkit-any-link,
    .lazy-side-by-side .call-to-action:hover:-webkit-any-link {
      background: transparent;
      border: 1px solid #000;
      color: #000;
    }
    @media screen and (min-width: 768px) {
      .lazy-side-by-side .call-to-action {
        color: #000;
        background: #fff;
        border: 1px solid #fff;
      }
      .lazy-side-by-side .call-to-action:-webkit-any-link {
        color: #000;
        background: #fff;
        border: 1px solid #fff;
      }
      .lazy-side-by-side .call-to-action:active,
      .lazy-side-by-side .call-to-action:hover {
        color: #fff;
        background: transparent;
        border: 1px solid #fff;
      }
      .lazy-side-by-side .call-to-action:active:-webkit-any-link,
      .lazy-side-by-side .call-to-action:hover:-webkit-any-link {
        color: #fff;
        background: transparent;
        border: 1px solid #fff;
      }
      .lazy-side-by-side,
      .lazy-side-by-side * {
        color: #fff;
      }
      .lazy-side-by-side .container {
        flex-direction: row;
      }
      .lazy-side-by-side .left-side,
      .lazy-side-by-side .right-side {
        width: 50%;
      }
    }

    .lazy-side-by-side .blur img {
      filter: blur(4px);
      transform: scale(1.025);
      transition: filter 200ms ease-out;
    }

    .lazy-side-by-side .no-blur img {
      filter: blur(0);
      transform: scale(1);
    }

    .lazy-side-by-side .overflow-hidden {
      overflow: hidden;
    }

    .lazy-side-by-side #play-btn {
      width: 30px;
      height: 30px;
    }

    .lazy-side-by-side #play-btn:hover span,
    .lazy-side-by-side #play-btn:active span {
      background: hsla(0, 0%, 0%, 50%);
    }

    .lazy-side-by-side #play-btn:focus span {
      outline: none;
      box-shadow:
        0 0 0 2px hsl(0deg 0% 0% / 30%),
        0 0 3px 5px #85c1ff;
    }
    .lazy-side-by-side .controls {
      display: none;
    }
    article[data-enable-accessibility="true"].lazy-side-by-side .controls {
      display: block;
    }
    .control-buttons {
    }
    .slide-btn {
      background-color: red;
      height: 30px;
      width: 30px;
    }

    .slide-btn:hover {
      background-color: #fff;
      color: #000;
    }
    button {
      background-color: red;
    }
    .slide-btn.active {
      background: white;
    }
  </style>
  <article class="lazy-side-by-side" data-enable-accessibility="true">
    <div class="container d-flex position-relative">
      <div
        class="overflow-hidden left-side position-relative d-flex"
        style="min-height: 275px; flex-direction: column"
      >
        <a class="" aria-label="" href="#" style="line-height: 0; width: 100%">
          <picture
            class="blur lozad-2025-01-25-load slide slide--first"
            style="min-height: 275px"
          >
            <source
              data-srcset="/assets/images/banner/Frame_1_D.jpg"
              media="(min-width: 768px)"
            />
            <source
              data-srcset="/assets/images/banner/Frame_1_M.jpg"
              media="(max-width: 767px)"
            />
            <img
              class="lozad-2025-01-25-load"
              src="/assets/images/banner/Frame_1_M_Placeholder_MIN.jpg"
              data-src="/assets/images/banner/Frame_1_M.jpg"
              alt="Your alt text"
              style="min-height: 275px; height: auto; width: 100%"
            />
            <noscript>
              <img
                src="/assets/images/banner/Frame_1_M.jpg"
                style="min-height: 275px; height: auto; width: 100%"
                loading="lazy"
                alt=""
              />
            </noscript>
          </picture>
          <picture class="slide hidden" style="min-height: 376px">
            <source
              srcset="/assets/images/banner/Frame_2_D.jpg"
              media="(min-width: 768px)"
            />
            <img
              src="/assets/images/banner/Frame_2_M.jpg"
              style="min-height: 275px; height: auto; width: 100%"
              alt=""
            />
          </picture>
          <picture class="slide hidden" style="min-height: 275px">
            <source
              srcset="/assets/images/banner/Frame_3_D.jpg"
              media="(min-width: 768px)"
            />
            <img
              src="/assets/images/banner/Frame_3_M.jpg"
              style="min-height: 275px; height: auto; width: 100%"
              alt=""
            />
          </picture>
          <picture class="slide hidden" style="min-height: 275px">
            <source
              srcset="/assets/images/banner/Frame_4_D.jpg"
              media="(min-width: 768px)"
            />
            <img
              src="/assets/images/banner/Frame_4_M.jpg"
              style="min-height: 275px; height: auto; width: 100%"
              alt=""
            />
          </picture>
        </a>
        <div class="controls">
          <div
            style="position: absolute; width: 100%; display: flex; justify-content: space-between; top: calc(50% - 22px); padding-left: 1rem; padding-right: 1rem"
          >
            <button id="prev-btn">Prev</button>
            <button id="next-btn">Next</button>
          </div>
          <div
            style="display: flex; flex-direction: row-reverse; gap: 3px; align-items: center; padding: 2px; background-color: #252525"
          >
            <button id="play-btn">
              <span>&#9654;</span>
            </button>
            <div class="control-buttons" style="display: flex; gap: 5px">
              <button class="slide-btn" style="width: 30px; height: 30px;"
                >1</button
              >
              <button class="slide-btn" style="width: 30px; height: 30px;"
                >2</button
              >
              <button class="slide-btn" style="width: 30px; height: 30px;"
                >3</button
              >
              <button class="slide-btn" style="width: 30px; height: 30px;"
                >4</button
              >
            </div>
          </div>
        </div>
      </div>
      <a
        class="right-side position-relative overflow-hidden"
        style="min-height: 275px;"
        href="#"
        aria-label=""
      >
        <picture class="blur lozad-2025-01-25-load" style="min-height: 275px">
          <source
            data-srcset="/assets/images/banner/Frame_Background_D.jpg"
            media="(min-width: 768px)"
          />
          <source
            data-srcset="/assets/images/banner/Frame_Background_M.jpg"
            media="(max-width: 767px)"
          />
          <img
            class="lozad-2025-01-25-load"
            src="/assets/images/banner/Frame_Background_M_Placeholder_MIN.jpg"
            data-src="/assets/images/banner/Frame_Background_M.jpg"
            alt=""
            style="min-height: 275px; height: auto; width: 100%"
          />
          <noscript>
            <img
              src="/assets/images/banner/Frame_Background_M.jpg"
              alt=""
              style="min-height: 275px; height: auto; width: 100%"
            />
          </noscript>
        </picture>
        <div class="content d-flex">
          <h2 class="headline">
            Be your<br />best self.
          </h2>
          <p class="copy">
            Dive in and see our collections<br />
            and pick up your faves from our lineups.
          </p>
          <span class="call-to-action"> SHOP NOW </span>
        </div>
      </a>
    </div>
  </article>
  <script type="text/javascript" src="/assets/lib/lozad.min.js"></script>
  <script type="text/javascript" src="/assets/js/custom-slider-with-stop.js"
  ></script>
  <script type="text/javascript">
    (function () {
      const slider = new customSlider({
        targetClassName: ".lazy-side-by-side .slide",
      });

      const state = {
        observerFinished: false,
        sliderPaused: false,
        currentSlide: 0,
      };

      const slides = document.querySelectorAll(".lazy-side-by-side .slide");
      const playBtn = document.getElementById("play-btn");
      const prevBtn = document.getElementById("prev-btn");
      const nextBtn = document.getElementById("next-btn");

      function showSlide(index) {
        slides.forEach((slide, i) => {
          slide.classList.toggle("hidden", i !== index);
        });
        state.currentSlide = index;
        pauseSlider();
      }

      function pauseSlider() {
        slider.stop();
        state.sliderPaused = true;
        playBtn.querySelector("span").innerHTML = "&#9654;"; // Play icon
      }

      function generateSlideButtons() {
        const slideBtns = document.querySelectorAll(".slide-btn");

        slides.forEach((_, index) => {
          const btn = slideBtns[index];
          btn.innerText = index + 1;
          btn.setAttribute("data-index", index);
          btn.addEventListener("click", function () {
            pauseSlider();

            btn.classList.add("active");

            slideBtns.forEach((slideBtn, index2) => {
              if (index !== index2) {
                slideBtn.classList.remove("active");
              }
            });

            showSlide(index);
          });
        });
      }

      function goToNextSlide() {
        pauseSlider();
        let nextIndex = (state.currentSlide + 1) % slides.length;
        showSlide(nextIndex);
      }

      function goToPrevSlide() {
        pauseSlider();
        let prevIndex =
          (state.currentSlide - 1 + slides.length) % slides.length;
        showSlide(prevIndex);
      }

      function togglePlayPause() {
        if (state.sliderPaused) {
          pauseSlider();
          slider.start();
          playBtn.querySelector("span").innerHTML = "&#9208;"; // Pause icon
        } else {
          pauseSlider();
        }
        state.sliderPaused = !state.sliderPaused;
      }

      function initPlayButton() {
        playBtn.addEventListener("click", togglePlayPause);
        prevBtn.addEventListener("click", goToPrevSlide);
        nextBtn.addEventListener("click", goToNextSlide);
      }

      function initBanner() {
        if (!state.observerFinished) {
          const _lozad = lozad(".lozad-2025-01-25-load", {
            load: function (el) {
              if (el.nodeName === "IMG") {
                const sourceElements = el.parentNode.querySelectorAll("source");
                sourceElements.forEach((source) => {
                  source.srcset = source.dataset.srcset;
                });
                el.src = el.dataset.src;
              }
              el.onload = function () {
                el.parentNode.classList.add("no-blur");

                if (
                  el.parentNode.classList.contains("slide--first") &&
                  !state.observerFinished
                ) {
                  slider.start();
                  _lozad.observer.disconnect();
                  state.observerFinished = true;
                }
              };
            },
          });
          _lozad.observe();
        }
        initPlayButton();
        generateSlideButtons();
        showSlide(0);
      }

      if (
        document.readyState === "complete" ||
        document.readyState === "interactive"
      ) {
        initBanner();
      } else {
        document.addEventListener("DOMContentLoaded", initBanner);
      }
    })();
  </script>
</Layout>

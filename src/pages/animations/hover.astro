<style>
body {
    box-sizing: border-box;
    font-family: sans-serif;
}
.flashy-hover {
    padding: 1rem;
    --btn-theme-1: #242424;
    --animation-time-1: 200ms;
}

.flashy-hover .btn {
    display: inline-block;
    text-decoration: none;
    color: var(--btn-theme-1);
    font-size: 24px;
    border: 3px solid var(--btn-theme-1);
    position: relative;
    transition: all var(--animation-time-1);
    padding: 0.75rem 1.5rem;
    overflow: hidden;
}
.flashy-hover .btn:hover {
    color: #f2f2f2;
}
.flashy-hover .btn:before,
.flashy-hover .btn:after {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: var(--btn-theme-1);
    z-index: -1;
    transition: all var(--animation-time-1);
}
.flashy-hover .btn:before {
    transform: rotateX(90deg); 
}
.flashy-hover .btn:after {
    transform: rotateY(90deg);
}
.flashy-hover .btn:hover:before {
    transform: rotateX(0deg); 
}
.flashy-hover .btn:hover:after {
    transform: rotateY(0deg); 
}
</style>
<article class="flashy-hover">
    <h1 style="margin-bottom: 2rem">
       Hover effect 
    </h1>
    <section style="margin-bottom: 4rem">
        <a href="#" class="btn">
            Read more
        </a>
    </section>
</article>

<style>
body {
    box-sizing: border-box;
    font-family: sans-serif;
}
.swipe-article {
    padding: 1rem;
    --btn-theme-1: #242424;
    --animation-time-1: 200ms;
}

.swipe-article .swipe-btn {
    border-radius: 50px;
    display: inline-block;
    text-decoration: none;
    color: var(--btn-theme-1);
    font-size: 24px;
    border: 3px solid var(--btn-theme-1);
    position: relative;
    transition: all var(--animation-time-1);
    padding: 0.75rem 1.5rem;
    overflow: hidden;
}
.swipe-article .swipe-btn:hover {
    color: #f2f2f2;
}
.swipe-article .swipe-btn:before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: var(--btn-theme-1);
    z-index: -1;
    transform: translateX(-100%);
    transition: all var(--animation-time-1);
}
.swipe-article .swipe-btn:hover:before {
    transform: translateX(0);
}

.swipe-article .changer {
    background: rgb(249, 201, 97);
    border: 1px solid rgb(249, 201, 97);
    max-width: 200px;
    text-align: center;
    position: relative;
    height: 50px;
    overflow: hidden;
    font-weight: bold;
}

.swipe-article .changer:hover .second-sign {
    transform: translateY(0);
}

.swipe-article .changer:hover .first-sign {
    transform: translateY(100%);
}

.swipe-article .changer .first-sign {
    width: 100%;
    height: 100%;
    padding: 1rem;
    box-sizing: border-box;
    transition: all var(--animation-time-1) ease-in-out;
}
.swipe-article .changer .second-sign {
    transition: all var(--animation-time-1) ease-in-out;
    width: 100%;
    height: 100%;
    padding: 1rem;
    box-sizing: border-box;
    position: absolute;
    transform: translateY(-100%)
}
</style>
<article class="swipe-article">
    <h1 style="margin-bottom: 2rem">
        Swipe Effect
    </h1>
    <section style="margin-bottom: 4rem">
        <a href="#" class="swipe-btn">
            Read more
        </a>
    </section>
    <section>
        <div class="changer">
            <div class="second-sign">
                DONE
            </div>
            <div class="first-sign">
                SUBMIT
            </div>
        </div>
    </section>
</article>
